# PostgreSQL 数据库连接
DATABASE_URL="postgresql://user:pass@localhost:5432/dns_admin"

# NextAuth.js 密钥（openssl rand -base64 32）
AUTH_SECRET="your-secret-here"

# 公网访问地址，反向代理 / Docker 部署时必填，否则退出登录等重定向会指向内部地址
# AUTH_URL="https://cloudflare-dns.us.ci"

# 初始管理员账号（仅 prisma db seed 时使用）
SEED_ADMIN_EMAIL="admin@example.com"
SEED_ADMIN_PASSWORD="changeme123"

# 受保护域名（逗号分隔），这些域名下的 DNS 记录不可删除
PROTECTED_ZONES=""

# 受保护的超级管理员邮箱，该账号的密码、角色和删除操作均被禁止
PROTECTED_ADMIN_EMAIL=""

# 演示模式：true 时登录页自动填充 SEED_ADMIN_EMAIL/SEED_ADMIN_PASSWORD
DEMO_MODE="false"
